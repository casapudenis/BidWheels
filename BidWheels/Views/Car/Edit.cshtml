@model BidWheels.Models.Car

@{
	ViewData["Title"] = "Edit";
}

<div class="row">
	<div class="col-md-8 mx-auto rounded border p-3">
		<h2 class="text-center mb-5">Edit Car</h2>

		<form method="post" enctype="multipart/form-data">
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Brand Id</label>
				<div class="col-sm-8">
					<select class="form-control" asp-for="BrandId" asp-items="ViewBag.BrandId"></select>
					<span asp-validation-for="BrandId" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Model</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Model">
					<span asp-validation-for="Model" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Year</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Year">
					<span asp-validation-for="Year" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Mileage</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Mileage">
					<span asp-validation-for="Mileage" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Engine Id</label>
				<div class="col-sm-8">
					<select class="form-control" asp-for="EngineId" asp-items="ViewBag.EngineId"></select>
					<span asp-validation-for="EngineId" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Transmission Id</label>
				<div class="col-sm-8">
					<select class="form-control" asp-for="TransmissionId" asp-items="ViewBag.TransmissionId"></select>
					<span asp-validation-for="TransmissionId" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Color Id</label>
				<div class="col-sm-8">
					<select class="form-control" asp-for="ColorId" asp-items="ViewBag.ColorId"></select>
					<span asp-validation-for="ColorId" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Description</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="Description">
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label class="col-sm-4 col-form-label">Image</label>
				<div class="col-sm-8">
					<input class="form-control" asp-for="ImageFile">
					<span asp-validation-for="ImageFile" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<div class="offset-sm-4 col-sm-4 d-grid">
					<button type="submit" class="btn btn-primary">Submit</button>
				</div>
				<div class="col-sm-4 d-grid">
					<a class="btn btn-outline-primary" asp-action="Index" role="button">Cancel</a>
				</div>
			</div>
		</form>
	</div>
</div>