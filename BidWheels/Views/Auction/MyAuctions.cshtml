@model List<BidWheels.Models.Auction>

@{
    ViewData["Title"] = "My Auctions";
}

<h1>My Auctions</h1>

@if (Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Car</th>
                <th>Start Time</th>
                <th>End Time</th>
                <th>Starting Price</th>
                <th>Current Bid</th>
                <th>Current Winner</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var auction in Model)
            {
                <tr>
                    <td>@auction.Car.Model</td>
                    <td>@auction.StartTime</td>
                    <td>@auction.EndTime</td>
                    <td>@auction.StartingPrice</td>
                    <td>@(auction.CurrentBid.HasValue ? auction.CurrentBid.Value.ToString("C2") : "No bids yet")</td>
                    <td>@(auction.CurrentBidderId != null ? auction.CurrentBidderId : "No bids yet")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No auctions found.</p>
}

<a asp-action="Index">Back to List</a>
